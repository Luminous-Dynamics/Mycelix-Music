{
  "name": "@mycelix/contracts",
  "version": "0.1.0",
  "description": "Smart contracts for Mycelix Music platform",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "coverage": "forge coverage",
    "clean": "forge clean",
    "lint": "forge fmt --check",
    "format": "forge fmt",
    "deploy:local": "forge script script/DeployLocal.s.sol --rpc-url http://localhost:8545 --private-key ${PRIVATE_KEY} --broadcast",
    "deploy:testnet": "forge script script/DeployTestnet.s.sol --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --broadcast --verify",
    "verify": "forge verify-contract"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "music",
    "decentralized"
  ],
  "license": "MIT"
}
