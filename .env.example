# ==========================================================
# Production Monitoring & Observability
# ==========================================================

# Prometheus URL
PROMETHEUS_URL=http://localhost:9090

# Grafana configuration
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_PASSWORD=change_this_in_production

# Alertmanager
ALERTMANAGER_URL=http://localhost:9093

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty integration key (optional, for critical alerts)
PAGERDUTY_SERVICE_KEY=your_pagerduty_service_key

# ==========================================================
# Security & Performance
# ==========================================================

# JWT secret for authentication
JWT_SECRET=change_this_to_a_random_string_in_production

# Session secret
SESSION_SECRET=change_this_to_another_random_string

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://mycelix.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=52428800  # 50MB

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis cache TTL (in seconds)
CACHE_TTL=3600  # 1 hour

# ==========================================================
# Backup & Disaster Recovery
# ==========================================================

# S3 bucket for backups (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BACKUP_BUCKET=mycelix-music-backups

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# ==========================================================
# Contract Verification
# ==========================================================

# Etherscan-like API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# For Gnosis Chain
GNOSISSCAN_API_KEY=your_gnosisscan_api_key
